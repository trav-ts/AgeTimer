<?xml version="1.0" encoding="utf-8"?>
<!-- Grid layout will contain 5 buttons, 2 buttons per row. The last row will only contain 1 button
     so it should be centered. -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:useDefaultMargins="true"
    android:padding="50dp"
    android:rowCount="3"
    android:columnCount="2"
    android:background="@color/white"
    tools:context=".MainActivity"
    >
    <Button
        android:id="@+id/seconds_btn"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/roundbtn"
        android:text="@string/seconds_btn"/>
    <Button
        android:id="@+id/minutes_btn"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/roundbtn"
        android:text="@string/minutes_btn"/>
    <Button
        android:id="@+id/hours_btn"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/roundbtn"
        android:text="@string/hours_btn"/>
    <Button
        android:id="@+id/timer_btn"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/roundbtn"
        android:text="@string/timer_btn"/>
    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/settings_icon"
        android:scaleType="fitCenter"
        />
</GridLayout>
